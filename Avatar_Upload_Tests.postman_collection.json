{
  "info": {
    "name": "Avatar Upload Tests - Group 7",
    "description": "Test collection for Avatar Upload with Cloudinary",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login to get token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "2. Get Avatar Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/avatar/info",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "avatar", "info"]
        }
      }
    },
    {
      "name": "3. Upload Avatar",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "path/to/your/image.jpg"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:3000/api/avatar/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "avatar", "upload"]
        }
      }
    },
    {
      "name": "4. Get Profile (with avatar)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "profile"]
        }
      }
    },
    {
      "name": "5. Delete Avatar",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/avatar/delete",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "avatar", "delete"]
        }
      }
    },
    {
      "name": "6. Upload Large File (Should Fail)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "path/to/large/image.jpg"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:3000/api/avatar/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "avatar", "upload"]
        }
      }
    },
    {
      "name": "7. Upload Invalid File (Should Fail)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "path/to/document.pdf"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:3000/api/avatar/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "avatar", "upload"]
        }
      }
    }
  ]
}