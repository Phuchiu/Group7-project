    {
      "name": "2. Activity Logging Tests",
      "item": [
        {
          "name": "Login Admin (Creates Log)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": "http://localhost:3000/api/auth/login"
          }
        },
        {
          "name": "Get Activity Stats (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {
              "raw": "http://localhost:3000/api/activity/stats?days=7",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "activity", "stats"],
              "query": [{"key": "days", "value": "7"}]
            }
          }
        },
        {
          "name": "Get All Activity Logs (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {
              "raw": "http://localhost:3000/api/activity/logs?page=1&limit=20",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "activity", "logs"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "20"}
              ]
            }
          }
        },
        {
          "name": "Get My Activity Logs (User)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": {
              "raw": "http://localhost:3000/api/activity/my-logs?page=1&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "activity", "my-logs"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Filter Logs by Action (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {
              "raw": "http://localhost:3000/api/activity/logs?action=LOGIN_SUCCESS&page=1&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "activity", "logs"],
              "query": [
                {"key": "action", "value": "LOGIN_SUCCESS"},
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        }
      ]
    },
