{
  "info": {
    "name": "Forgot Password API Tests",
    "description": "Test collection for Forgot Password & Reset Password functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register Test User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Password Test User\",\n  \"email\": \"passwordtest@example.com\",\n  \"password\": \"oldpassword123\",\n  \"role\": \"user\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "signup"]
        }
      }
    },
    {
      "name": "2. Request Password Reset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"passwordtest@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "forgot-password"]
        },
        "description": "Should send email with reset token"
      }
    },
    {
      "name": "3. Reset Password with Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": \"newpassword123\",\n  \"confirmPassword\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password/{{resetToken}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "reset-password", "{{resetToken}}"]
        },
        "description": "Use token from email"
      }
    },
    {
      "name": "4. Login with New Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"passwordtest@example.com\",\n  \"password\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "description": "Should work with new password"
      }
    },
    {
      "name": "5. Login with Old Password (Should Fail)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"passwordtest@example.com\",\n  \"password\": \"oldpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "description": "Should fail - old password no longer valid"
      }
    },
    {
      "name": "6. Test Invalid Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"password\": \"anotherpassword123\",\n  \"confirmPassword\": \"anotherpassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset-password/invalid-token-123",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "reset-password", "invalid-token-123"]
        },
        "description": "Should fail with invalid token"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "resetToken",
      "value": ""
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ]
}