{
  "info": {
    "name": "RBAC API Tests",
    "description": "Test collection for Role-Based Access Control functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login as Admin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "2. Login as Moderator",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"moderator@example.com\",\n  \"password\": \"moderator123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "3. Login as User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"user123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "4. Admin - Get All Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "users"]
        },
        "description": "Should work - Admin has read:users permission"
      }
    },
    {
      "name": "5. Moderator - Get All Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{moderatorToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "users"]
        },
        "description": "Should work - Moderator has read:users permission"
      }
    },
    {
      "name": "6. User - Get All Users (Should Fail)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "users"]
        },
        "description": "Should fail - User doesn't have read:users permission"
      }
    },
    {
      "name": "7. Admin - Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "users", "{{userId}}"]
        },
        "description": "Should work - Admin has delete:users permission"
      }
    },
    {
      "name": "8. Moderator - Delete User (Should Fail)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{moderatorToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "users", "{{userId}}"]
        },
        "description": "Should fail - Moderator doesn't have delete:users permission"
      }
    },
    {
      "name": "9. Admin - Update User Role",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"moderator\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/admin/users/{{userId}}/role",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "users", "{{userId}}", "role"]
        },
        "description": "Should work - Admin has manage:roles permission"
      }
    },
    {
      "name": "10. Get User Profile (All roles)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile"]
        },
        "description": "Should work for all roles - Everyone has read:profile permission"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "moderatorToken",
      "value": ""
    },
    {
      "key": "userToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    }
  ]
}